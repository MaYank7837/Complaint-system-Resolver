<form method="post" action="/registerComplaint" class="shadow-sm p-3 mb-5 rounded">

    <h2>Register a Complaint</h2>
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" type="text" name="name" placeholder="Name" >
    </div>
    <div class="form-group">
        <label>Email</label>
        <input class="form-control" type="email" name="email" placeholder="Email">
    </div>
    <div class="form-group">
        <label>Contact Number</label>
        <input class="form-control" type="text" name="contact" placeholder="Phone Number">
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea type="text" class="form-control" name="desc" rows="5" placeholder="Enter the Description"></textarea>
    </div>
    <div class="row"> 
    <div class="col-6">
    <button class="btn btn-success mr-5" type="submit">Submit Complaint</button>
    </div>
    <div class="col-6">
     Wanna change your mind? <a class="btn btn-warning btn-sm" href="/">Back</a>
    </div>
 </div>
